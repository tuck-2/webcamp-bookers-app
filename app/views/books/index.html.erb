<%= flash[:success] %>

<h1>Books</h1>
<table class="index">
  <tr class="index-headding">
    <th class="index-headding-item1">Title</th>
    <th class="index-headding-item2">Body</th>
  </tr>
  <% @books.each do |book| %>
    <tr class="index-main">
      <td class="index-main-item1"><%= book.title %></td>
      <td class="index-main-item2"><%= book.body %></td>
      <td class="index-main-item3">
        <span class="index-main-link"><%= link_to "Show", book_path(book) %></span>
        <span class="index-main-link"><%= link_to "Edit", edit_book_path(book) %></span>
        <span class="index-main-link"><%= link_to "Destroy", book_path(book), method: :delete %></span>
      </td>
    </tr>
  <% end %>
</table>

<div class="new">
  <h2>New book</h2>
  <% if @book.errors.any? %>
    <div class="error-box">
      <h3 class="error-message"><%= @book.errors.count %> error prohibited this book from being saved:</h3>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li class="error-message-text"><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= form_with model:@book, local:true do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit "Create Book" %>
  <% end %>
</div>
